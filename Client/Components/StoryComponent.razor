@using ScrumGame.Shared;

<div class="scrumgame-story" @ondragstart="HandleOnDragStart" draggable="@Drag">
    <p>@Priority. @Story.Description</p>
</div>

@code
{
    [Parameter]
    public Story Story { get; set; }
    [Parameter]
    public StoryContainer SContainer { get; set; }
    [Parameter]
    public int Priority { get; set; }
    [Parameter]
    public string Drag { get; set; }

    private void HandleOnDragStart()
    {
        StoryContainer.Payload = Story;
        StoryContainer.PayloadPrevious = SContainer;
    }
}